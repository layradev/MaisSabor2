@model ReflectionIT.Mvc.Paging.PagingList<MaisSabor2.Models.Categoria>

@{
    ViewData["Title"] = "Index";
}

<h1>Categoria</h1>

<form method="get" class="d-flex">
    <div class=" col-10 col-sm-8">
        <input name="filtro" class="form-control" placeholder="filtro" value="@Model.RouteValue["filtro"]" />
    </div>    
    <div class=" col-2 col-sm-4">
         <button type="submit" class="btn roxo text-light">Procurar</button>
    </div>
   
</form>
<div class="mt-3">
    Total de Categorias : @Model.TotalRecordCount
</div>

<div class="my-3">
    <vc:pager paging-list="@Model"></vc:pager>
</div>
<p>
   <a class="btn btn-info" asp-action="Create">Criar novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CategoriaId">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.CategoriaId">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.CategoriaId">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
